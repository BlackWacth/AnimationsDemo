<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hua.animationsdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".CrossFadeActivity"
            android:label="@string/title_crossfade"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".CardFlipActivity"
            android:label="@string/title_cardflip"/>

        <activity
            android:name=".ScreenSlideActivity"
            android:label="@string/title_screenslide"/>

        <activity
            android:name=".ZoomActivity"
            android:label="@string/title_zoom"/>

        <activity
            android:name=".LayoutChangeActivity"
            android:label="@string/title_layout_change"/>
    </application>

</manifest>
